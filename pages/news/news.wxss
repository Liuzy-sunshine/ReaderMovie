swiper{
    width:100%;
    height:500rpx;
}
swiper image{
    width:100%;
    height:500rpx
}
.news-content{
    display:flex;
    flex-direction: column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:5px;
}
.author-date{
    /*margin:10rpx 0 20rpx 10rpx;*/
    margin-left: 10rpx;
}
.author-date .author{
    width:80rpx;
    height:80rpx;
    vertical-align: middle;
}
.author-date .date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.title{
    font-size: 34rpx;
    font-weight: 700;
    color:#333;
    margin-bottom: 10px;
    margin-top:5px;
    margin-left: 10px;
}
.pic{
    width:100%;
    height:340rpx;
    margin-bottom: 10px;
}
.content{
    font-size: 28rpx;
    color:#333;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    text-indent: 2em;
}
.like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}
.like .like-pic{
    width:16px;
    height:16px;
    margin-right:8px;
    vertical-align: middle;
}
.like .like-font{
    vertical-align: middle;
    margin-right: 20rpx;
}